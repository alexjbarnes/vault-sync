## Service flags (at least one must be true)
ENABLE_SYNC=true
ENABLE_MCP=true

## Obsidian account credentials (required when sync is enabled)
OBSIDIAN_EMAIL=
OBSIDIAN_PASSWORD=

## Vault encryption password (required when sync is enabled)
OBSIDIAN_VAULT_PASSWORD=

## Vault name to sync (optional if only one vault exists)
OBSIDIAN_VAULT_NAME=

## Directory to sync vault files into
## Optional when sync is enabled (defaults to ~/.vault-sync/vaults/<vault_id>/)
## Required when running MCP-only mode
## Note: when running in Docker, the default path is inside the container at
## /root/.vault-sync/vaults/<vault_id>/. The docker-compose volume covers
## this. If you set a custom path, add a matching volume mount.
# OBSIDIAN_SYNC_DIR=/path/to/vault

## Device name shown in Obsidian Sync logs. Defaults to system hostname.
## Set this to identify your deployment (e.g. "alexs-docker", "home-server").
# DEVICE_NAME=my-server

## Log format: "development" (text) or "production" (json)
ENVIRONMENT=production

## .obsidian/ config sync toggles (all default to false)
SYNC_MAIN_SETTINGS=false
SYNC_APPEARANCE=false
SYNC_THEMES_SNIPPETS=false
SYNC_HOTKEYS=false
SYNC_ACTIVE_CORE_PLUGINS=false
SYNC_CORE_PLUGIN_SETTINGS=false
SYNC_COMMUNITY_PLUGINS=false
SYNC_INSTALLED_PLUGINS=false

## MCP server settings (required when MCP is enabled)
MCP_LISTEN_ADDR=:8090
MCP_SERVER_URL=https://your-server.example.com
# MCP_AUTH_USERS=user1:<password>,user2:<password>

## Pre-configured client credentials for non-interactive (headless) MCP clients.
## Format: client_id:secret,client_id:secret (secret must be at least 16 characters)
## These clients can only use the client_credentials OAuth grant.
# MCP_CLIENT_CREDENTIALS=my-bot:<secret>,ci-agent:<secret>
