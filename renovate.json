{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboard": false,
  "labels": [
    "dependencies"
  ],
  "automerge": false,
  "prHourlyLimit": 0,
  "separateMajorMinor": false,
  "packageRules": [
    {
      "description": "Group all updates into a single PR",
      "groupName": "all dependencies",
      "groupSlug": "all",
      "matchPackageNames": [
        "*"
      ]
    }
  ]
}
